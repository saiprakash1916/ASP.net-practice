@model MVCItemCreation.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <style>
        h2 {
            color: #48237e;
            margin: 20px 0;
        }

        .btn-primary {
            background-color: #48237e;
            border-color: #48237e;
        }

        .form-group, .alert {
            width: 270px;
        }
    </style>
</head>
<body>
    <div>
        @using (Html.BeginForm("Contact", "User", FormMethod.Post))
        {
            <div class="container">
                <h2>Create Item</h2>
                <div class="row form-group">
                    <div class="col-sm-4">@Html.LabelFor(s => s.ItemName)</div>
                    <div class="col-sm-8">@Html.TextBoxFor(s => s.ItemName, new { @class = "form-control", @id = "name" })</div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-4">@Html.LabelFor(s => s.Description)</div>
                    <div class="col-sm-8">@Html.TextBoxFor(s => s.Description, new { @class = "form-control", @id = "description" })</div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-4">@Html.LabelFor(s => s.Price)</div>
                    <div class="col-sm-8">@Html.TextBoxFor(s => s.Price, new { @class = "form-control", @id = "price" })</div>
                </div>
                <div class="row form-group">
                    <div class="col-sm-4">@Html.LabelFor(s => s.Category)</div>
                    <div class="col-sm-8">@Html.TextBoxFor(s => s.Category, new { @class = "form-control", @id = "category" })</div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <input type="submit" value="Create" id="create" class="btn btn-primary" />
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>
